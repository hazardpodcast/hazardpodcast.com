<!-- The Author meta propagates the byline in a number of social networks -->
<meta name="author" content="{{ site.author }}" ></meta>

<meta property="og:title"
    content="{% if title %}{{ title | striptags(false) | safe | truncate(160) }}{% else %}{{ site.site_name }}{% endif %}" ></meta>

<meta property="og:description"
    content="{% if description %}{{ description | striptags(false) | truncate(160) }}{% else %}{{ site.description }}{% endif %}" ></meta>


<meta property="og:url"
    content="{{site.site_url}}{{ page.url }}" ></meta>

<meta property="og:site_name" content="{{ site.site_name }}" ></meta>

<meta property="og:locale" content="en_US" ></meta>

<meta name="twitter:site" content="@chronotope" ></meta>

<meta name="twitter:description" content="{% if description %}{{ description | striptags(false) | truncate(160) }}{% else %}{{ site.description }}{% endif %}" ></meta>

<meta name="description" content="{% if description %}{{ description | striptags(false) | truncate(160) }}{% else %}{{ site.description }}{% endif %}"></meta>

<!-- I prefer the summary_large_image Twitter card for posts. -->
<meta name="twitter:card" content="summary_large_image" ></meta>
<!-- You, you're the creator. -->
<meta name="twitter:creator" content="{{site.site_twitter}}" ></meta>
<!-- This property is for the article title, not site title. -->
<meta name="twitter:title" content="{% if title %}{{ title | striptags(false) | safe | truncate(160) }}{% else %}{{ site.site_name }}{% endif %}" ></meta>

{% if featuredImage %}

<meta property="og:image" content="{{site.site_url}}/img/{{featuredImage}}" ></meta>
<meta name="twitter:image" content="{{site.site_url}}/img/{{featuredImage}}" ></meta>

{% elif site.featuredImage %}

<meta property="og:image" content="{{site.site_url}}/img/{{site.featuredImage}}" ></meta>
<meta name="twitter:image" content="{{site.site_url}}/img/{{site.featuredImage}}" ></meta>

{% endif %}

{% if '/posts' in page.url or '/episode' in page.url %}
    <!-- Article specific OG data -->
    <!-- The OG:Type dictates a number of other tags on posts. -->
    <meta property="og:type" content="article" ></meta>
    <meta property="article:published_time" content="{{ page.date.toUTCString() }}" ></meta>

    <!-- page.modified isn't a natural Jekyll property, but it can be added. -->
    {% if modified %}
    <meta property="article:modified_time" content="{{modified}}" ></meta>
    {% endif %}

    <!-- Here my author and publisher tags are the same (yay self-publishing) -->
    <meta property="article:author" content="{{site.site_facebook}}" ></meta>
    <!-- But if your site has its own page, this is where to put it. -->
    <meta property="article:publisher" content="{{site.site_facebook}}" ></meta>

    {% if section %}
    <!-- Article section isn't a required property, but it can be good to have -->
    <meta property="article:section" content="{{section}}" ></meta>
    {% endif %}

    {% if tags %}
        <!-- I use the page.categories property for OG tags. -->
        {% for tag in tags %}
        <meta property="article:tag" content="{{tag}}" ></meta>
        {% endfor %}
        <meta name="keywords" content="{{ tags | join(', ') }}" ></meta>
    {% endif %}


{% else %}

<meta property="og:type" content="website" ></meta>

{% endif %}
